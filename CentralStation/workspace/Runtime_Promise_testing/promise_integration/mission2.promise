mission{
	conditions{
		events:
			e1: "intruder_detected",
			e2: "out_battery"		
			, e3 : a actions : a1 : a } robots robot1 
		locations { not ordered : l1, l2, lcharge , l4  
			
		} 
		operators { parallel ( sequence ( 
			delegate ( robot robot1 does FairVisit locations l1 , l2 ) , 
			eventHandler ( 
				default ( delegate ( robot robot1 does Visit locations l1 )) 
				except e1 ( eventHandler ( 
					default ( delegate ( robot robot1 does Visit locations l2 ) ) 
					except e2 ( delegate ( robot robot1 does SimpleAction actions a1 affecting event e2 ) ) affecting event e1) ) ) , 
			delegate ( robot robot1 does Patrolling locations lcharge , l4 ), 
			fallback ( 
				delegate ( robot robot1 does Visit locations l1 ) , 
				delegate ( robot robot1 does Visit locations l2 )
		) , condition ( 
			if e1 then ( delegate ( robot robot1 does Visit locations l1 affecting event e1 ) ) 
			if e2 then ( delegate ( robot robot1 does Visit locations l2 affecting event e2 ) )
		) )
		) 
		 
	}   
}         