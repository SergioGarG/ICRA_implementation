mission{
	conditions{
		events:
			e1: "intruder_detected",
			e2: "out_battery"
		actions:
			a1: "raise_alarm",
			a2: "charge" }
		robots robot1, robot2 , robot3
		, robot4 locations { not ordered : l1, l2, lcharge , l4  
			
		} 
		operators { parallel ( 
			//Robot1      
			eventHandler ( 
				default ( delegate ( robot robot1 does Patrolling locations l1 , l2 stoppingEvents e1 ) ) 
				except e1 ( delegate ( robot robot1 does SimpleAction actions a1 affecting event e1 stoppingEvents e2 ) ) 
				except e2 ( sequence (  
					delegate ( robot robot1 does Patrolling locations lcharge , l1 stoppingEvents e1 ) , 
					delegate ( robot robot1 does Visit locations lcharge , l4 ) affecting event e2) )) , 
	
			//Robot2
			delegate ( robot robot2 does StrictOrderedVisit locations l1 , l2 ) , 
			
			delegate ( robot robot3 does FairVisit locations l1 , l2 , lcharge , l4 ) ) 
		 
	}   
}     